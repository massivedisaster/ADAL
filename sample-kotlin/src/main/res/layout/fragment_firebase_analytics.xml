<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_spacing"
            android:text="@string/firebase_analytics_message_screen"/>

        <Button
            android:id="@+id/btnAnalyticsNewFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_spacing"
            android:text="@string/analytics_new_fragment"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/medium_spacing"
            android:layout_marginTop="@dimen/medium_spacing"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/btnAnalyticsSendEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_spacing"
            android:text="@string/analytics_send_event"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edtAnalyticsEventLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/extra_small_spacing"
            android:layout_marginLeft="@dimen/normal_spacing"
            android:layout_marginRight="@dimen/normal_spacing"
            android:layout_marginTop="@dimen/normal_spacing"
            android:gravity="center"
            android:hint="@string/analytics_edittext_hint"
            android:inputType="text"
            android:lines="1"/>

        <Button
            android:id="@+id/btnAnalyticsSendEventLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_spacing"
            android:layout_marginLeft="@dimen/normal_spacing"
            android:layout_marginRight="@dimen/normal_spacing"
            android:layout_marginTop="@dimen/extra_small_spacing"
            android:text="@string/analytics_send_event_label"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/medium_spacing"
            android:layout_marginTop="@dimen/medium_spacing"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/large_spacing"
            android:paddingRight="@dimen/large_spacing"
            android:text="@string/analytics_gender_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/large_spacing"/>

        <RadioGroup
            android:id="@+id/rdgAnalyticsGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/normal_spacing"
            android:paddingLeft="@dimen/large_spacing"
            android:paddingRight="@dimen/large_spacing"
            android:paddingTop="@dimen/normal_spacing">

            <RadioButton
                android:id="@+id/rdbAnalyticsGenderM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/analytics_gender_male"/>

            <RadioButton
                android:id="@+id/rdbAnalyticsGenderF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/analytics_gender_female"/>

        </RadioGroup>

    </LinearLayout>

</ScrollView>